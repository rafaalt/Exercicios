<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".UserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/userNome"
        android:textStyle="bold"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNome"
        android:id="@+id/userBio"
        android:text="Biografia"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userBio"
        android:id="@+id/userCompany"
        android:textStyle="italic"
        android:text="Empresa"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_alignParentRight="true"
        android:textSize="22dp"
        android:layout_marginTop="5dp"
        android:id="@+id/userLogin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repositorios: "
        android:layout_below="@id/userCompany"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/padraoRep"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@id/padraoRep"
        android:layout_below="@id/userCompany"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/userRep"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguidores: "
        android:layout_below="@id/padraoRep"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/padraoFollowers"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:layout_toRightOf="@id/padraoFollowers"
        android:layout_below="@id/padraoRep"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/userFollowers"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blog"
        android:layout_below="@id/padraoFollowers"
        android:textStyle="italic"
        android:textSize="20dp"
        android:id="@+id/userBlog"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="localizacao"
        android:layout_below="@id/userBlog"
        android:textSize="20dp"
        android:id="@+id/userLocal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email"
        android:layout_below="@id/userLocal"
        android:textSize="20dp"
        android:id="@+id/userEmail"/>
</RelativeLayout>