<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtTexto"
        android:textColor="@color/gold_500"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="@color/gold_200"
        android:textSize="@dimen/sizeTexto"
        android:padding="@dimen/txtPadding"/>
     <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/marginBtn_Bottom"
        android:text="@string/txtBotao"
        android:backgroundTint="@color/gold_700"
        android:textColor="@color/gold_200"
        android:id="@+id/btn_surprise"/>

</RelativeLayout>